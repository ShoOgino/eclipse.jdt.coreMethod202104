/*
 * Ensures that the source of an inner class can be retrieved.
 */
public void testInnerClass1() throws JavaModelException {
	IType type = this.innerClasses.getClassFile("X.class").getType();
	assertSourceEquals(
		"Unexpected source",
		"public class X {\n" + 
		"  void foo() {\n" + 
		"    new X() {};\n" + 
		"    class Y {}\n" + 
		"    new Y() {\n" + 
		"      class Z {}\n" + 
		"    };\n" + 
		"    class W {\n" + 
		"      void bar() {\n" + 
		"        new W() {};\n" + 
		"      }\n" + 
		"    }\n" + 
		"  }\n" + 
		"  class V {\n" + 
		"    V(String s) {\n" + 
		"    }\n" + 
		"  }\n" + 
		"}",
		type.getSource());
}


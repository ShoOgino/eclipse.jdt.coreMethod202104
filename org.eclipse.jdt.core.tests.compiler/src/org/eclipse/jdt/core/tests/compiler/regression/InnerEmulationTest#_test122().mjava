			"		M() {\n" + 
			"			this(new Runnable() {\n" + 
			"				{\n" + 
			"					foo(\"0\");\n" + 
			"					bar(\"0\");\n" + 
			"				}\n" + 
			"				public void run() {\n" + 
			"				}\n" + 
			"			});\n" + 
			"		}\n" + 
			"		void bar(String s) { System.out.print(\"<bar:\"+s+\">\"); }\n" + 
			"	}\n" + 
			"}\n",
		},
		"----------\n" + 
		"1. ERROR in X.java (at line 12)\n" + 
		"	bar(\"0\");\n" + 
		"	^^^\n" + 
		"Cannot refer to an instance method while explicitly invoking a constructor\n" + 
		"----------\n");
}


// null analysis - do while
// https://bugs.eclipse.org/bugs/show_bug.cgi?id=184298
// variant
public void test0619_do_while_infinite() {
	this.runConformTest(
		new String[] {
			"X.java",
			"public class X {\n" + 
			"  public void test(String[] a) {\n" + 
			"    String key = null;\n" + 
			"    loop: for( int i = 0; ; i++ )\n" + 
			"    {\n" + 
			"      if (a[i] == null)\n" + 
			"        break loop;\n" + 
			"      key = a[i];\n" + 
			"    }\n" + 
			"    if (key != null) {\n" + 
			"      // empty\n" + 
			"    }\n" + 
			"  }\n" + 
			"}"},
		"");
}

